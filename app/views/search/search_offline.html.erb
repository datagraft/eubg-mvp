<% provide(:title, "Local S4 Search")  %>
<div class="container jumbotron">

    <div class="row">
        <div class="col-xs-8 col-xs-offset-3">
            <%= form_tag search_offline_path, :method => 'get', :class => 'form-inline' do %>
            <div class="form-group">
                <%= label_tag 'company' %>
                <%= text_field_tag :search, params[:search], :placeholder => 'Company name', :class => 'form-control' %>
            </div>
            <div class="form-group disabled">
                <%= label_tag 'country' %>
                <%= select_tag :jurisdictionFilter, options_for_select([["All", ""], ["Norway", "no"], ["Italy", "it"], ["Great Britain", "gb"]]), :class => 'form-control' %>
            </div>
            <%= button_tag "Search (Local S4)", :name => nil, :class => "btn btn-default" %>
        </div>
        <% end %>
    </div>

    <div>
        <% if @searchResultSetLocal && @searchResultSetLocal.any? %>
        <%= will_paginate @searchResultSetLocal %>
        <p>
            <% @searchResultSetLocal.each do |company| %>
            <%= link_to company["legalName"]["value"], company_info_offline_path( :ocJurisdictionCode => "#{company["jurisdiction"]["value"]}", :ocCompanyNumber => "#{company["identifier"]["value"]}", :atokaCompanyNumber => "", :MVPMode => "#{@MVPMode}" ), 
            :html => { :class => "btn" } %>

            <br/>
            <% end %>
        </p>
        <%= will_paginate @searchResultSetLocal %>
        <% end %>
        
    </div>

</div>
