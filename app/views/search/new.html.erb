<% provide(:title, "Search")  %>
<div class="container jumbotron">

<div class="input-group">
    <%= form_tag root_path, :method => 'get' do %>
    <p>
        <%= text_field_tag :search, params[:search], :placeholder => 'Search Company' %> Country filter:
        <%= select_tag :jurisdictionFilter, options_for_select([["All", ""], ["Norway", "no"], ["Italy", "it"], ["Great Britain", "gb"]]) %>
        <%= submit_tag "Search", :name => nil %>
    </p>
    <% end %> 
</div>

<div>
<% if @resultSet && @resultSet.any? %>
    <%= will_paginate @resultSet %>
    <p>
        <% @resultSet.each do |company| %>
        <%= link_to company["company"]["name"], company_info_path( :ocJurisdictionCode => "#{company["company"]["jurisdiction_code"]}", :ocCompanyNumber => "#{company["company"]["company_number"]}", :atokaCompanyNumber => "#{company["company"]["atoka_company_id"]}" ) %> 
        
        <% if company["company"]["atoka_company_id"] %>
        <%= image_tag("AtokaLogoSmall.png", size: "22x22") %>
        <% end %>
        
        <% if company["company"]["source"] && company["company"]["source"]["publisher"] == "BrÃ¸nnÃ¸ysundregistrene" %>
        <%= image_tag("BrregLogoSmall.png", size: "22x22") %>
        <% end %>
        
        <%= image_tag("OCLogoSmall.png", size: "22x22") %>
        <br/>
        <% end %>
    </p>
    <%= will_paginate @resultSet %>
<% end %>
</div>
    
    

</div>
